<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.portal.datadit.inventorymanagement.EditorActivity">

    <EditText
        android:id="@+id/editTextProductName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:hint="Enter Product Name"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextProductQuantity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextProductName"
        android:layout_below="@+id/editTextProductName"
        android:hint="Enter Product Quantity"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextProductPrice"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextProductQuantity"
        android:layout_below="@+id/editTextProductQuantity"
        android:hint="Enter Product Price"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextSupplierName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextProductPrice"
        android:layout_below="@+id/editTextProductPrice"
        android:hint="Enter Supplier Name"
        android:inputType="text"
        android:padding="8dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextSupplierNumber"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextSupplierName"
        android:layout_below="@+id/editTextSupplierName"
        android:hint="Enter Supplier Number"
        android:inputType="phone"
        android:padding="8dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextSupplierMail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextSupplierNumber"
        android:layout_below="@+id/editTextSupplierNumber"
        android:hint="Enter Supplier Email "
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editTextSupplierMail"
        android:layout_marginBottom="23dp"
        android:background="@android:color/black"
        android:text="SAVE"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/buttonAddImage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/buttonSave"
        android:layout_alignEnd="@+id/editTextSupplierMail"
        android:layout_marginEnd="13dp"
        android:background="@android:color/background_dark"
        android:text="Add Image"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
